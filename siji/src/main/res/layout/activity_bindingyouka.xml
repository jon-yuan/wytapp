<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/binding_youka"
        app:navigationIcon="@drawable/goback_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/btn_gray_stork_shape">

        <EditText
            android:id="@+id/et_youka"
            style="@style/EditTextStyle"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="@string/input_or_saoyisao"/>

        <ImageView
            android:id="@+id/img_saoyisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_saoyisao"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_binding"
        style="@style/ButtonStyle"
        android:layout_marginHorizontal="20dp"
        android:text="@string/binding"
        android:textSize="16sp"/>
</LinearLayout>