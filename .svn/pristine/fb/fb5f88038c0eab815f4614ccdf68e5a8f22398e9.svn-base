<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layout_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/luxian1"
                android:textColor="@color/black_98"/>
            <TextView
                android:id="@+id/tv_start"
                style="@style/TextViewStyle"
                android:text="@string/luxian1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/icon_luxian_right"/>
            <TextView
                android:id="@+id/tv_end"
                style="@style/TextViewStyle"
                android:text="@string/luxian1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/chexing1"
                android:textColor="@color/black_98"/>
            <TextView
                android:id="@+id/tv_xuqiu"
                style="@style/TextViewStyle"
                android:text="13米/100吨"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/huowu1"
                android:textColor="@color/black_98"/>
            <TextView
                android:id="@+id/tv_goodname"
                style="@style/TextViewStyle"
                android:text="果蔬农产品"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/yujitihuoshijian1"
                android:textColor="@color/black_98"/>
            <TextView
                android:id="@+id/tv_time"
                style="@style/TextViewStyle"
                android:text="2017/05/11 11:00"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_callphone"/>

</LinearLayout>