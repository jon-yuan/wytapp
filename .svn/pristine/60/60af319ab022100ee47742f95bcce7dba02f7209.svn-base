<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/icon_background_blue">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/history_order"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/goback"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/zongshourue"/>
            <TextView
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="2233"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/youkajine"/>
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="2233"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/zengsongjine"/>
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="2233"/>
            </LinearLayout>


        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/xianjinjine"/>
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="2233"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/qitashouru"/>
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="2233"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/qitakouchu"/>

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2233"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:background="@color/white"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:drawableLeft="@drawable/icon_order"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="@string/all_order"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/TextViewStyle"
            android:drawableLeft="@drawable/icon_rili"
            android:gravity="center|right"
            android:drawablePadding="10dp"
            android:textColor="@color/black_98"
            android:text="2017/07"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>