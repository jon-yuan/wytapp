<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/bingbankcaark"
        app:navigationIcon="@drawable/goback_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="银行卡号"/>
        <EditText
            style="@style/EditTextStyle"
            android:textColor="@color/black_98"
            android:gravity="right|center_vertical"
            android:hint="@string/please_input_bankcar"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="15dp"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="@string/bankname"/>
        <TextView
            style="@style/TextViewStyle"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black_98"
            android:gravity="right|center_vertical"
            android:hint="@string/please_select_bank"
            android:drawableRight="@drawable/icon_next_right_gray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="15dp"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="@string/yuliushoujihao"/>
        <TextView
            style="@style/TextViewStyle"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black_98"
            android:inputType="number"
            android:gravity="right|center_vertical"
            android:hint="@string/please_input_phone_numbuter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="15dp"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:id="@+id/et_authCode"
            style="@style/EditTextStyle"
            android:inputType="textVisiblePassword"
            android:hint="@string/please_input_auth_code"/>
        <View
            android:layout_width="1px"
            android:layout_marginVertical="10dp"
            android:layout_height="match_parent"
            android:background="@color/main_gray_line"/>
        <TextView
            android:id="@+id/tv_authCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textColor="@color/black_333"
            android:gravity="center"
            android:text="@string/getAuthCode"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        style="@style/ButtonStyle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:text="确定"
        android:textSize="16sp"/>

</LinearLayout>