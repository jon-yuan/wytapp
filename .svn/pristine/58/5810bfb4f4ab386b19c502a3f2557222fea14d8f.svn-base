<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        style="@style/TextViewStyle"
        android:textColor="@color/black_98"
        android:text="2017/02/02-2018/09/02"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/yundanhao1"/>
            <TextView
                android:id="@+id/tv_yundanhao"
                style="@style/TextViewStyle"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black_98"
                android:ellipsize="end"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/luxian1"/>

            <TextView
                android:id="@+id/tv_luxian"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_98" />
        </LinearLayout>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/zengsongjine"/>
            <TextView
                android:id="@+id/tv_zengsong"
                style="@style/TextViewStyle"
                android:textColor="@color/black_98"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/shouru"/>
            <TextView
                android:id="@+id/tv_shouru"
                style="@style/TextViewStyle"
                android:textColor="@color/black_98"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:layout_height="40dp"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/tv_lookpic"
            style="@style/TextViewStyle"
            android:textColor="@color/black_98"
            android:text="@string/chakanzhaopian"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_address"
            style="@style/TextViewStyle"
            android:textColor="@color/black_98"
            android:layout_marginLeft="20dp"
            android:text="@string/chakantixiexiangqing"/>
    </LinearLayout>


</LinearLayout>