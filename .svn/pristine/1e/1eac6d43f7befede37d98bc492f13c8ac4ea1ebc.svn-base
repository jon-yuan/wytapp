<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FF5534"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/up"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="上移"
            android:gravity="center"
            android:background="@color/color_btn_blue"
            android:textColor="#fff"
            android:drawableTop="@drawable/icon_white_up"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/down"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/color_btn_blue"
            android:drawableTop="@drawable/icon_white_down"
            android:text="下移"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/black_333"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:gravity="center_vertical|right"
                android:textColor="@color/black_333"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_address"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/black_333"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:background="@color/main_gray_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卸货地"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/black_333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/icon_edit"
                android:gravity="center_vertical|right"
                android:textColor="@color/black_333"/>
            <TextView
                android:id="@+id/tv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_delete"
                android:gravity="center_vertical|right"
                android:textColor="@color/black_333"/>

        </LinearLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>