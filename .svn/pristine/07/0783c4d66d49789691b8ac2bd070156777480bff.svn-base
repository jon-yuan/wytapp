<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_headportrait"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewStyle"
            android:layout_marginTop="10dp"
            android:text=""/>


    </LinearLayout>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="@string/order_yiwancheng"/>
        <TextView
            android:id="@+id/tv_finishorder"
            style="@style/TextViewStyle"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="--"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        style="@style/LinelayoutStyle"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="@string/shouru"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_income"
            style="@style/TextViewStyle"
            android:layout_marginLeft="10dp"
            android:text="--"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:text="@string/baozhengjin"/>
        <TextView
            style="@style/TextViewStyle"/>
        <TextView
            android:id="@+id/tv_baozhengjin"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="--"/>
        <TextView
            android:id="@+id/btn_chongzhi"
            style="@style/TextViewStyle"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="10dp"
            android:text="@string/chongzhi"
            android:textColor="@color/white"
            android:paddingVertical="2dp"
            android:enabled="false"
            android:background="@drawable/button_shape_gray"/>
        <TextView
            android:id="@+id/btn_tixian"
            style="@style/TextViewStyle"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="@string/tixian"
            android:textColor="@color/white"
            android:enabled="false"
            android:background="@drawable/button_shape_gray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        android:id="@+id/layout_personalinfo"
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/icon_next_right_gray"
            android:drawableLeft="@drawable/icon_gerenzhongxin"
            android:text="@string/gerenxinxi"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        android:id="@+id/layout_qianbao"
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/icon_next_right_gray"
            android:drawableLeft="@drawable/icon_qianbao"
            android:text="@string/wodeqianbao"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        android:id="@+id/layout_order"
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/icon_next_right_gray"
            android:drawableLeft="@drawable/icon_order"
            android:text="@string/lishidingdan"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>
    <LinearLayout
        android:id="@+id/layout_xieyi"
        style="@style/LinelayoutStyle"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            style="@style/TextViewStyle"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/icon_next_right_gray"
            android:drawableLeft="@drawable/icon_xiangguanxieyi"
            android:text="@string/xiangguanxieyi"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_gray_line"/>

    <TextView
        android:id="@+id/tv_commit"
        style="@style/ButtonStyle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/logout"
        android:textSize="16sp"/>
</LinearLayout>


</ScrollView>