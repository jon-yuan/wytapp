<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_paizhao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:textColor="@color/black_333"
            android:text="拍照"
            android:background="@drawable/dialog_imgcheck_top_radio_5"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_xiangce"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:background="@drawable/dialog_imgcheck_bottom_radio_5"
            android:textColor="@color/black_333"
            android:text="相册"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:textColor="#FFBA2C2C"
            android:text="取消"
            android:background="@drawable/dialog_imgcheck_radio_5"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>