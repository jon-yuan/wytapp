<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:enabled="true"
                android:text="@string/pai"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/round_bg_blue_shape" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_state_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_dingdan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_666"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_98"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_siji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_666"
                android:textSize="12sp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_dianhua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_666"
                android:textSize="12sp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>